<%= form_for(book) do |f| %>
  <h2>New book</h2>
	<div class="form-group">
		<%= f.label :title %><br>
		<%= f.text_field :title, autofocus: true, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :opinion %><br>
		<%= f.text_area :body, autfocus: true, class: "form-control" %>
	</div>
	<%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
<% end%>