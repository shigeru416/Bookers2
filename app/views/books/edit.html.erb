<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			 <div class="form-group">
			 	<%= f.label :title %><br>
			 	<%= f.text_field :title, autoforcus: true, class: "form-control" %>
			 </div>
			 <div class="form-group">
				 <%= f.label :opinion %><br>
				 <%= f.text_area :body, autfocus: true, class: "form-control" %>
			 </div>
			 <div class="action">
			 	<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
			 </div>
			<% end %>
			<div class="form-group">
			   <%= link_to "Show", book_path(@book.id) ,class: "btn btn-link" %>|<%= link_to "Back", books_path, class: "btn btn-link" %>
		    </div>
		</div>
	</div>
</div>