                            <td></td>
                            <td></td>
                            <td></td>
        	  			<th>opinion</th>
        	  		</tr>
        	  	</thead>
                <% @books.each do |book| %>
            	  	<tbody>
            	  		<tr>
            	  			<td>
                                <%= link_to user_path(book.user.id) do %>
