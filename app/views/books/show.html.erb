<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <p id="notice">
                <%= notice %>
            </p>
        </div>
    </div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-3">

		   <%= render 'users/info', user: @user_you %>
           <%= render 'books/new', book: @post_book %>

        </div>
        <div class="col-xs-9">
        	<h2>Book detail</h2>
        	  <table class="table table-hover">
        	  	<tbody>
        	  		<tr>
        	  			<td>
                            <%= link_to user_path(@user.id) do %>
            	  				<%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: 'jpeg', fallback: 'no_image.jpg', size: '50x50' %><br>
                                <%= @user.name %>
                            <% end %>
        	  			</td>
        	  			<td>
        	  				<%= link_to @book.title, book_path(@book.id) %>
        	  			</td>
        	  			<td>
                            <%= @book.body %>
        	  			</td>
        	  			<td>
                            <% if current_user.id == @user.id %>
        	  				   <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-xs" %>
                            <% end %>
        	  			</td>
                        <td>
                            <% if current_user.id == @user.id %>
                               <%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger btn-xs", method: :delete %>
                            <% end %>
                        </td>
        	  		</tr>
        	  	</tbody>
        	  </table>
        </div>
    </div>
</div>