<div class="container">
	<div class="row">
		<div class="col-xs-3">

		   <%= render 'users/info', user: @user_you %>
           <%= render 'books/new', book: @post_book %>

        </div>
        <div class="col-xs-9">
        	<h2>User</h2>
        	  <table class="table table-hover">
        	  	<thead>
        	  		<tr>
        	  			<th>image</th>
        	  			<th>name</th>
        	  		</tr>
        	  	</thead>
                <% @users.each do |user| %>
            	  	<tbody>
            	  		<tr>
            	  			<td>
            	  				<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg', size: '50x50' %>
            	  			</td>
            	  			<td>
            	  				<%= user.name %>
            	  			</td>
                            <td></td>
                            <td></td>
                            <td></td>
            	  			<td>
            	  				<%= link_to "Show", user_path(user.id) %>
            	  			</td>
            	  		</tr>
            	  	</tbody>
                <% end %>
        	  </table>
        </div>
    </div>
</div>