<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p id="notice">
                <%= notice %>
            </p>
        </div>
    </div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-3">

		   <%= render 'users/info', user: @user %>
           <%= render 'books/new', book: @book %>

        </div>
        <div class="col-md-9">
        	<h2>Books</h2>
        	  <table class="table table-hover">
        	  	<thead>
        	  		<tr>
        	  			<th></th>
        	  			<th>Title</th>
        	  			<th>Opinion</th>
        	  		</tr>
        	  	</thead>

        	  	<tbody>
                    <% @books.each do |book| %>
            	  		<tr>
            	  			<td>
                                <%= link_to user_path(@user.id) do %>
            	  				   <%= attachment_image_tag @user, :profile_image, :fill, 50,50, format: 'jpeg', fallback: 'no_image.png' %>
                                <% end %>
            	  			</td>
            	  			<td>
                                <%=link_to book.title, book_path(book.id) %>
            	  			</td>
            	  			<td>
            	  				<%= book.body %>
            	  			</td>
            	  		</tr>
                    <% end %>
        	  	</tbody>

        	  </table>
        </div>
    </div>
</div>